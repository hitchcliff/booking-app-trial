{
  "compilerOptions": {
    "target": "es2018",
    "module": "node16",
    "lib": ["dom", "es6", "es2017", "es2018", "esnext.asynciterable"],
    "allowJs": true,
    "maxNodeModuleJsDepth": 10,
    "skipLibCheck": true,
    "sourceMap": false,
    "outDir": "dist",
    "moduleResolution": "Node16",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules"],
  "paths": {
    "baseUrl": "./", // This sets the base directory for resolving non-relative module names.
    "@/*": ["src/*"]
    // "../*": ["./src/*"] // This maps "src/" to the actual "src/" directory relative to baseUrl.
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
